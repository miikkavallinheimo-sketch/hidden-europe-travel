---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

const title = "Contact Hidden Europe - European Travel Experts | Get Travel Advice";
const description = "Contact Hidden Europe's travel experts for personalized European destination advice. Email info@hiddeneurope.travel for hidden gems, boutique hotel recommendations, and travel planning assistance.";
---

<Layout title={title} description={description}>
  <Navigation />
  <link rel="stylesheet" href="/src/styles/contact.css">
  <main>
    <section class="hero-contact">
        <div class="container">
            <h1>Get in Touch</h1>
            <p class="hero-subtitle">We're here to help you discover Europe's hidden treasures</p>
        </div>
    </section>

    <section class="contact-content">
        <div class="container">
            <div class="contact-grid">
                <div class="contact-info">
                    <h2>Contact Information</h2>
                    
                    <div class="contact-item">
                        <h3>General Inquiries</h3>
                        <p><strong>Email:</strong> <a href="mailto:info@hiddeneurope.travel">info@hiddeneurope.travel</a></p>
                        <p>We typically respond within 24 hours during business days.</p>
                    </div>

                    <div class="contact-item">
                        <h3>Partnership Opportunities</h3>
                        <p><strong>Email:</strong> <a href="mailto:partnerships@hiddeneurope.travel">partnerships@hiddeneurope.travel</a></p>
                        <p>For hotels, destinations, and tourism boards interested in collaboration.</p>
                    </div>

                    <div class="contact-item">
                        <h3>Press & Media</h3>
                        <p><strong>Email:</strong> <a href="mailto:press@hiddeneurope.travel">press@hiddeneurope.travel</a></p>
                        <p>For media inquiries, press releases, and interview requests.</p>
                    </div>

                    <h3>Frequently Asked Questions</h3>
                    <p>Before reaching out, you might find the answer to your question in our comprehensive <a href="/faq">FAQ section</a>.</p>

                    <h3>Follow Our Journey</h3>
                    <p>Stay updated with our latest discoveries and travel insights through our newsletter and social media channels.</p>
                </div>

                <div class="contact-form">
                    <h2>Send Us a Message</h2>
                    <form action="/contact" method="POST" class="contact-form-element">
                        <div class="form-group">
                            <label for="name">Full Name *</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email Address *</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="subject">Subject *</label>
                            <select id="subject" name="subject" required>
                                <option value="">Select a topic</option>
                                <option value="general">General Inquiry</option>
                                <option value="destination">Destination Recommendation</option>
                                <option value="partnership">Partnership Opportunity</option>
                                <option value="press">Press/Media Inquiry</option>
                                <option value="feedback">Feedback</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="message">Message *</label>
                            <textarea id="message" name="message" rows="6" required></textarea>
                        </div>
                        
                        <div class="form-group checkbox-group">
                            <label class="checkbox-label">
                                <input type="checkbox" name="newsletter" value="yes">
                                <span class="checkbox-custom"></span>
                                Subscribe to our newsletter for hidden gem discoveries
                            </label>
                        </div>
                        
                        <button type="submit" class="submit-button">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
  </main>
</Layout>

<script>
  // Form validation and submission logic
  const form = document.querySelector('.contact-form-element');
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Basic validation
    const requiredFields = form.querySelectorAll('[required]');
    let isValid = true;
    
    requiredFields.forEach(field => {
      if (!(field as HTMLInputElement).value.trim()) {
        isValid = false;
        (field as HTMLInputElement).style.borderColor = '#ff4444';
      } else {
        (field as HTMLInputElement).style.borderColor = '';
      }
    });
    
    if (!isValid) {
      alert('Please fill in all required fields');
      return;
    }
    
    // Here you would typically send the form data to your backend
    // For now, we'll just show a success message
    alert('Thank you for your message! We will get back to you soon.');
    (form as HTMLFormElement).reset();
  });
</script>
